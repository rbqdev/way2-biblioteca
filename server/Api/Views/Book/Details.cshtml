@{
    Layout = null;
}
@model Domain.Entities.Book
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Way2 Library_ - Detalhes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>
<body>
</body>
</html>
<div class="container">
    <a href="/">Home</a>
    <div class="col-md-12">
        <h2>@Model.Title</h2>
        <h3><small class="text-muted">@Model.Authors</small></h3>
    </div>
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Publicação</dt>
                <dd class="col-sm-9">@Model.PublicationDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">ISBN</dt>
                <dd class="col-sm-9">@Model.ISBN</dd>

                <dt class="col-sm-3">Editora</dt>
                <dd class="col-sm-9">@Model.Publisher</dd>

                <dt class="col-sm-3">Páginas</dt>
                <dd class="col-sm-9">@Model.NumberOfPages</dd>

                <dt class="col-sm-3">Nota GoodReads</dt>
                <dd class="col-sm-9">@Model.AverageRating / 5 (@Model.RatingCount avaliações)</dd>
            </dl>

            <p style="text-align: justify">@Model.Description</p>
        </div>
        <div class="col-md-4">
            <img src="@Model.ImageUrl" style="max-height: 400px" />
        </div>
    </div>
</div>